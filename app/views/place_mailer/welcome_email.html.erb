<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
  </head>
  <body>
    <table class="table table-bordered table-dark">
      <tr>
        <td scope="col">Назва</td>
        <td scope="col">Адреса</td>
        <td scope="col">Рейтинг</td>
        <td scope="col">Кількість коментарів</td>
        <td scope="col">Оцінка алгоритму</td>
      </tr>
    <% @places_json.each do |place| %>
      <tr scope="row">
        <td><%= place['name'] %></td>
        <td><%= place['address'] %></td>
        <td><%= place['rate'] %></td>
        <td><%= place['comment_count'] %></td>
        <td><%= eval(sprintf("%8.2f",place['rating'])) %></td>
      </tr>
    <% end %>
  </body>
</html>
