<div class="check">
  <%- if devise_mapping.omniauthable? %>
    <%#- resource_class.omniauth_providers.each do |provider| %>

        <%#= link_to " ", user_facebook_omniauth_authorize_path, class:"fab fa-facebook facebook", title:"Facebook" %>
        <%= link_to " ", user_github_omniauth_authorize_path, class:"fab fa-github facebook", title:"GitHub" %>
        <%= link_to " ", user_google_oauth2_omniauth_authorize_path, class:"fab fa-google facebook", title:"Google" %><br/>
    <% end %>
  <%# end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Забули свій пароль?", new_password_path(resource_name), class:"button" %><br />
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Не отримали інструкцій підтвердження?", new_confirmation_path(resource_name), class:"button" %><br />
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Не отримали інструкцій щодо розблокування?", new_unlock_path(resource_name), class:"button" %><br />
  <% end %>
</div>
