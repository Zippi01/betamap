<div class="page">
  <div class="box">
    <h1>Змінити пароль</h1>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>
      <div class="field">
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "Пароль" %>
      </div>
      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Підтвердіть пароль"%>
      </div>
      <div class="actions">
        <%= f.submit "Змінити пароль" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
